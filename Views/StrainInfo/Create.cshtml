@model CannabisChoice.Models.StrainInfo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Strain Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sname" class="control-label"></label>
                <input asp-for="Sname" class="form-control" />
                <span asp-validation-for="Sname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thc" class="control-label"></label>
                <input asp-for="Thc" class="form-control" />
                <span asp-validation-for="Thc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cbd" class="control-label"></label>
                <input asp-for="Cbd" class="form-control" />
                <span asp-validation-for="Cbd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terpenes" class="control-label"></label>
                <input asp-for="Terpenes" class="form-control" />
                <span asp-validation-for="Terpenes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pic" class="control-label"></label>
                <input asp-for="Pic" class="form-control" type="file" />
                <span asp-validation-for="Pic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Effects" class="control-label"></label>
                <input asp-for="Effects" class="form-control" />
                <span asp-validation-for="Effects" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
